{
  "name": "node-api-tdd",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node src/server.js",
    "lint": "eslint src/** tests/** --fix",
    "test": "jest --coverage --runInBand --forceExit",
    "secure:mode": "jest --watch --verbose=true",
    "knex:create:migrate": "knex migrate:make",
    "migrate": "knex migrate:latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      },
      "./src/services": {
        "lines": 100
      }
    }
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^3.0.5",
    "jest": "^23.6.0",
    "supertest": "^3.3.0"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.3",
    "consign": "^0.1.6",
    "express": "^4.16.4",
    "jwt-simple": "^0.5.5",
    "knex": "^2.4.0",
    "knex-logger": "^0.1.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.7.1"
  }
}
